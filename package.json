{
   "name": "querybuilder-graphql-filter",
   "version": "0.1.0",
   "description": "A library for filtering resources in GraphQL using various QueryBuilders",
   "main": "dist/index.js",
   "author": "Matthew Kuo <matthew.kuo@dialexa.com>",
   "license": "MIT",
   "typings": "dist/index.d.ts",
   "files": [
      "dist/**/*"
   ],
   "scripts": {
      "build": "tsc",
      "lint": "tslint -p tsconfig.json",
      "test": "TS_NODE_PROJECT=./test/tsconfig.json nyc mocha test/**/*.test.ts --exit",
      "coverage": "nyc report --reporter=text-lcov | coveralls"
   },
   "husky": {
      "hooks": {
         "pre-commit": "lint-staged",
         "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
      }
   },
   "nyc": {
      "include": [
         "src/**/*.ts"
      ],
      "extension": [
         ".ts"
      ],
      "require": [
         "ts-node/register"
      ],
      "reporter": [
         "text-summary",
         "text",
         "html"
      ],
      "sourceMap": true,
      "instrument": true
   },
   "lint-staged": {
      "src/**/*.ts": [
         "yarn lint --fix",
         "git add"
      ],
      "test/**/*.ts": [
         "yarn lint --project ./test/tsconfig.json --fix",
         "git add"
      ]
   },
   "devDependencies": {
      "@commitlint/cli": "^7.5.2",
      "@commitlint/config-conventional": "^7.5.0",
      "@types/chai": "^4.1.7",
      "@types/graphql": "^14.0.5",
      "@types/joi": "^14.3.1",
      "@types/knex": "^0.14.14",
      "@types/mocha": "^5.2.6",
      "chai": "^4.2.0",
      "chance": "^1.0.18",
      "coveralls": "^3.0.3",
      "husky": "^1.3.1",
      "lint-staged": "^8.1.5",
      "mocha": "^6.0.2",
      "nyc": "^13.3.0",
      "pg": "^7.8.2",
      "ts-node": "^8.0.3",
      "tsconfig-paths": "^3.8.0",
      "tslint": "^5.12.1",
      "tslint-config-prettier": "^1.18.0",
      "tslint-eslint-rules": "^5.4.0",
      "typescript": "^3.3.1"
   },
   "dependencies": {
      "graphql": "^14.1.1",
      "joi": "^14.3.1",
      "knex": "^0.14.6"
   }
}
